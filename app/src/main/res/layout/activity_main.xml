<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@mipmap/australia"


        tools:context=".MainActivity">

    <EditText
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:hint="Enter NEMIS number here"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="392dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Continue"
            android:textSize="30dp"
            android:textColor="#FFFFFF"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContinuee" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp" android:layout_marginBottom="27dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            app:layout_constraintStart_toStartOf="@+id/buttonContinuee" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" app:layout_constraintBottom_toTopOf="@+id/buttonContinuee"/>
</android.support.constraint.ConstraintLayout>